#include "zmk100.dtsi"

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,split-role = "central";
    };
};

&kscan0: kscan {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "col2row";

    row-gpios =
        <&gpio0 2 GPIO_ACTIVE_LOW>,
        <&gpio0 3 GPIO_ACTIVE_LOW>,
        <&gpio0 4 GPIO_ACTIVE_LOW>,
        <&gpio0 5 GPIO_ACTIVE_LOW>,
        <&gpio0 6 GPIO_ACTIVE_LOW>,
        <&gpio0 7 GPIO_ACTIVE_LOW>;

    col-gpios =
        <&gpio0 8 GPIO_ACTIVE_LOW>,
        <&gpio0 11 GPIO_ACTIVE_LOW>,
        <&gpio0 12 GPIO_ACTIVE_LOW>,
        <&gpio0 13 GPIO_ACTIVE_LOW>,
        <&gpio0 14 GPIO_ACTIVE_LOW>,
        <&gpio0 15 GPIO_ACTIVE_LOW>,
        <&gpio0 16 GPIO_ACTIVE_LOW>,
        <&gpio0 17 GPIO_ACTIVE_LOW>;
};